<?xml version="1.0" encoding="utf-8"?>
<root>
	<title>阿里云短信</title>
	<note>官网是：http://www.aliyun.com</note>
	<code>
		<sendtype>
			<title>发送短信方式</title>
			<note>选择发送短信的方式</note>
			<type>radio</type>
			<option>
				<appcode>简单身份认证</appcode>
				<appkey>签名认证</appkey>
			</option>
			<default>appcode</default>
		</sendtype>
		<appcode>
			<title>APPCODE</title>
			<note><![CDATA[填写您申请成功的短信接口中关于APPCODE码，<span style="color:darkblue">使用简单身份认证必填</span>]]></note>
			<type>text</type>
			<required>false</required>
		</appcode>
		<appkey>
			<title>AppKey</title>
			<note><![CDATA[填写在阿里去申请到的AppKey，<span style="color:red">此项使用签名认证必填</span>]]></note>
			<type>text</type>
			<required>false</required>
		</appkey>
		<appsecret>
			<title>AppSecret</title>
			<note><![CDATA[填写在阿里去申请到的AppSecret，<span style="color:red">此项使用签名认证必填</span>]]></note>
			<type>text</type>
			<required>false</required>
		</appsecret>
		<server>
			<title>请求地址</title>
			<note><![CDATA[即接口请求地址，如：http://sms.market.alicloudapi.com/singleSendSms]]></note>
			<type>text</type>
			<required>true</required>
			<default>http://sms.market.alicloudapi.com/singleSendSms</default>
		</server>
		<tplvcode>
			<title>验证码模板标识</title>
			<note><![CDATA[模板中的验证码变量必须使用 <span style="color:darkblue">${chkcode}</span>]]></note>
			<type>text</type>
			<required>true</required>
		</tplvcode>
		<tplorder>
			<title>订单通知模板标识</title>
			<note><![CDATA[模板中的订单编号变量必须使用 <span style="color:darkblue">${ordersn}</span>]]></note>
			<type>text</type>
			<required>true</required>
		</tplorder>
		<signame>
			<title>签名</title>
			<note><![CDATA[请填写您在阿里上设置的短信签名]]></note>
			<type>text</type>
			<required>true</required>
		</signame>
	</code>
	<manage>
		<send>
			<title>发短信</title>
			<exec>sendsms</exec>
			<type>page</type>
		</send>
	</manage>
</root>